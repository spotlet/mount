#!/usr/bin/env bash

main () {
  local local_env=0
  case "${1}" in
    -l|--local)
      let local_env=1
  esac

  if (( 1 == ${local_env} )); then
    echo 'export SPOTLET_MOUNT_DIR=$HOME/.spotlet/mount'
    echo 'export SPOTLET_INDEX=$HOME/.spotlets'
  else
    echo 'export SPOTLET_MOUNT_DIR=${SPOTLET_MOUNT_DIR:-/usr/local/spotlet/mount}'
    echo 'export SPOTLET_INDEX=${SPOTLET_INDEX:-/usr/local/spotlets}'
  fi

  return 0
}

(main "${@}")
exit $?

